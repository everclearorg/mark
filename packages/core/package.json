{
  "name": "@mark/core",
  "version": "0.0.1",
  "description": "Core utilities and types for Mark.",
  "author": "Everclear",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "dev": "yarn dev",
    "lint": "yarn lint:package && yarn lint:ts",
    "lint:fix": "yarn lint --fix",
    "lint:package": "sort-package-json",
    "lint:ts": "eslint ./src",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "test": "nyc mocha --require ts-node/register --require tsconfig-paths/register --require test/globalTestHook.ts --extensions ts,tsx --exit --timeout 60000 'test/**/*.spec.ts'"
  },
  "dependencies": {
    "axios": "1.7.9",
    "dotenv": "16.4.7",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.11",
    "@types/chai-subset": "1.3.5",
    "@types/mocha": "10.0.6",
    "@types/node": "20.17.12",
    "@types/sinon": "17.0.3",
    "@types/uuid": "9.0.0",
    "chai": "4.4.1",
    "chai-subset": "1.6.0",
    "eslint": "9.17.0",
    "mocha": "10.3.0",
    "nyc": "17.1.0",
    "rimraf": "6.0.1",
    "sinon": "17.0.1",
    "sort-package-json": "2.12.0",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  }
}
