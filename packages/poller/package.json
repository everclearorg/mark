{
  "name": "@mark/poller",
  "version": "0.0.1",
  "description": "Poller logic for Mark.",
  "license": "MIT",
  "author": "Everclear",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.json && tsc-alias -p tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn src/dev.ts",
    "lint": "eslint src",
    "lint:fix": "yarn lint --fix",
    "test": "mocha --require ts-node/register --require tsconfig-paths/register --extensions ts,tsx --exit --timeout 60000 'test/**/*.spec.ts'"
  },
  "dependencies": {
    "@mark/chainservice": "workspace:*",
    "@mark/core": "workspace:*",
    "@mark/everclear": "workspace:*",
    "@mark/logger": "workspace:*",
    "@mark/web3signer": "workspace:*",
    "aws-lambda": "1.0.7",
    "viem": "2.22.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.17.12",
    "@types/sinon": "17.0.3",
    "chai": "4.2.0",
    "eslint": "9.17.0",
    "mocha": "11.0.1",
    "nyc": "17.1.0",
    "rimraf": "6.0.1",
    "sinon": "17.0.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.2"
  }
}
