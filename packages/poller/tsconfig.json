{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "composite": true,
    "moduleResolution": "node",
    "module": "commonjs"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../adapters/logger" },
    { "path": "../adapters/chainservice" },
    { "path": "../adapters/everclear" },
    { "path": "../adapters/web3signer" }
  ]
}