{
  "name": "@mark/webhooks",
  "version": "0.0.1",
  "private": true,
  "description": "Webhooks adapter for Mark event-driven architecture.",
  "author": "Everclear",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "lint": "yarn lint:package && yarn lint:ts",
    "lint:fix": "yarn lint --fix",
    "lint:package": "sort-package-json",
    "lint:ts": "eslint ./src",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "test": "yarn test:unit",
    "test:unit": "jest"
  },
  "dependencies": {
    "@mark/core": "workspace:*",
    "@mark/logger": "workspace:*",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "20.17.12",
    "@types/sinon": "17.0.3",
    "eslint": "9.17.0",
    "jest": "^30.0.5",
    "rimraf": "6.0.1",
    "sinon": "17.0.1",
    "sort-package-json": "2.12.0",
    "ts-jest": "^29.4.0",
    "typescript": "5.7.2"
  }
}
