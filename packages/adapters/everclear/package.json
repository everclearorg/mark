{
  "name": "@mark/everclear",
  "version": "0.0.1",
  "private": true,
  "description": "Everclear API adapter for Mark.",
  "author": "Everclear",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "dev": "yarn dev",
    "lint": "yarn lint:package && yarn lint:ts",
    "lint:fix": "yarn lint --fix",
    "lint:package": "sort-package-json",
    "lint:ts": "eslint ./src",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "test": "nyc mocha --require ts-node/register --require tsconfig-paths/register --extensions ts,tsx --exit --timeout 60000 'test/**/*.spec.ts'"
  },
  "dependencies": {
    "@mark/core": "workspace:*",
    "@mark/logger": "workspace:*",
    "@types/chai": "4.3.11",
    "@types/chai-subset": "1.3.5",
    "@types/mocha": "10.0.6",
    "@types/sinon": "17.0.3",
    "chai": "4.4.1",
    "chai-subset": "1.6.0",
    "mocha": "10.3.0",
    "nyc": "17.1.0",
    "sinon": "17.0.1"
  },
  "devDependencies": {
    "@types/node": "20.17.12",
    "@types/proxyquire": "^1.3.31",
    "eslint": "9.17.0",
    "proxyquire": "^2.1.3",
    "rimraf": "6.0.1",
    "sort-package-json": "2.12.0",
    "typescript": "5.7.2"
  }
}
