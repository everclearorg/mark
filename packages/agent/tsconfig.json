{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "zapatos/schema": ["../adapters/database/src/zapatos/zapatos/schema"],
      "zapatos/db": ["../adapters/database/node_modules/zapatos/dist/db"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "test"],
  "references": [
    { "path": "../core" },
    { "path": "../adapters/cache" },
    { "path": "../adapters/chainservice" },
    { "path": "../adapters/database" },
    { "path": "../adapters/everclear" },
    { "path": "../adapters/logger" },
    { "path": "../adapters/prometheus" },
    { "path": "../adapters/rebalance" },
    { "path": "../adapters/web3signer" }
  ]
}
